# key binding
keybind = ctrl+t>c=new_tab
keybind = ctrl+t>x=close_surface
keybind = ctrl+t>h=prompt_surface_title
keybind = ctrl+t>o=toggle_command_palette

keybind = ctrl+[=scroll_page_lines:-5
keybind = ctrl+]=scroll_page_lines:5
keybind = ctrl+super+[=scroll_to_top
keybind = ctrl+super+]=scroll_to_bottom

keybind = ctrl+t>s=new_split:down
keybind = ctrl+t>v=new_split:right
keybind = ctrl+t>ctrl+l=new_split:right
keybind = ctrl+t>ctrl+h=new_split:left
keybind = ctrl+t>ctrl+k=new_split:up
keybind = ctrl+t>ctrl+j=new_split:down

keybind = ctrl+t>m=goto_split:left
keybind = ctrl+t>n=goto_split:bottom
keybind = ctrl+t>e=goto_split:top
keybind = ctrl+t>i=goto_split:right
keybind = ctrl+t>k=goto_split:next
keybind = ctrl+t>p=goto_split:previous

keybind = ctrl+super+m=resize_split:left,30
keybind = ctrl+super+i=resize_split:right,30
keybind = ctrl+super+n=resize_split:down,30
keybind = ctrl+super+e=resize_split:up,30

keybind = ctrl+t>w=toggle_quick_terminal
keybind = ctrl+t>f=toggle_split_zoom

keybind = ctrl+t>1=goto_tab:1
keybind = ctrl+t>2=goto_tab:2
keybind = ctrl+t>3=goto_tab:3
