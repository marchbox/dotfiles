command = /opt/homebrew/bin/fish --login
theme = "Tokyonight Night"
clipboard-paste-protection = false

# typography
font-family = "MonoLisa"
font-family = "Noto Sans SC"
font-family = "Apple Color Emoji"
font-size = 14

# window
title = " "
window-height = 5000
window-width = 5000
window-padding-x = 8
window-padding-y = 8
window-colorspace = display-p3
window-save-state = always
window-new-tab-position = end
window-colorspace = display-p3
split-divider-color = 333

# macos
macos-icon = custom-style
macos-icon-frame = plastic
macos-icon-ghost-color = #99ff00
macos-icon-screen-color = #282c34
macos-titlebar-style = tabs
macos-option-as-alt = true
## rebind proper quote marks
keybind = shift+alt+]=text:’
keybind = alt+[=text:“
keybind = shift+alt+[=text:”
keybind = alt+]=text:‘
keybind = shift+alt+]=text:’
keybind = alt+;=text:…
keybind = alt+-=text:–
keybind = alt+shift+-=text:—

# mouse
mouse-hide-while-typing = true

# quick terminal
quick-terminal-position = center
quick-terminal-size = "50%,70%"

# key binding
keybind = ctrl+;>c=new_tab
keybind = ctrl+;>x=close_surface
keybind = ctrl+;>m=prompt_surface_title
keybind = ctrl+;>o=toggle_command_palette

keybind = ctrl+[=scroll_page_lines:-5
keybind = ctrl+]=scroll_page_lines:5
keybind = ctrl+super+[=scroll_to_top
keybind = ctrl+super+]=scroll_to_bottom

keybind = ctrl+;>s=new_split:down
keybind = ctrl+;>v=new_split:right
keybind = ctrl+;>ctrl+l=new_split:right
keybind = ctrl+;>ctrl+h=new_split:left
keybind = ctrl+;>ctrl+k=new_split:up
keybind = ctrl+;>ctrl+j=new_split:down

keybind = ctrl+;>h=goto_split:left
keybind = ctrl+;>j=goto_split:bottom
keybind = ctrl+;>k=goto_split:top
keybind = ctrl+;>l=goto_split:right
keybind = ctrl+;>n=goto_split:next
keybind = ctrl+;>p=goto_split:previous

keybind = ctrl+super+h=resize_split:left,30
keybind = ctrl+super+l=resize_split:right,30
keybind = ctrl+super+j=resize_split:down,30
keybind = ctrl+super+k=resize_split:up,30

keybind = ctrl+;>w=toggle_quick_terminal
keybind = ctrl+;>f=toggle_split_zoom

keybind = ctrl+;>1=goto_tab:1
keybind = ctrl+;>2=goto_tab:2
keybind = ctrl+;>3=goto_tab:3
keybind = ctrl+;>4=goto_tab:4
keybind = ctrl+;>5=goto_tab:5
keybind = ctrl+;>6=goto_tab:6
keybind = ctrl+;>7=goto_tab:7
keybind = ctrl+;>8=goto_tab:8
keybind = ctrl+;>9=goto_tab:9
keybind = ctrl+;>q=next_tab
keybind = ctrl+;>ctrl+;=next_tab
